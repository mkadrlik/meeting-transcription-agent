# Server Dockerfile - for MCP server host that processes transcriptions
FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build

WORKDIR /app
COPY MeetingTranscriptionAgent.csproj ./
RUN dotnet restore

COPY . ./
RUN dotnet publish -c Release -o out

# Runtime image for server
FROM mcr.microsoft.com/dotnet/aspnet:8.0 AS runtime

WORKDIR /app
COPY --from=build /app/out .

# Create transcriptions directory
RUN mkdir -p transcriptions

# Expose the server port
EXPOSE 8888

# Default to server mode
ENTRYPOINT ["dotnet", "MeetingTranscriptionAgent.dll", "server"]